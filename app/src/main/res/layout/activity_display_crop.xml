<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DisplayCropActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/apl_display_crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:liftOnScroll="true"
            tools:viewBindingIgnore="true"
    >

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_display_crop"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_root_large"
            app:layout_constraintTop_toBottomOf="@+id/apl_display_crop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:indicatorSize="@dimen/progress_indicator"
            app:trackThickness="@dimen/progress_track"
            android:indeterminate="true"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_root_medium"
            app:layout_constraintTop_toBottomOf="@+id/apl_display_crop"
            app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:id="@+id/text_display_crop_name"
              android:maxLines="1"
              android:ellipsize="end"
              style="@style/TextAppearance.AppCompat.Headline" />

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/text_display_crop_name"
              android:id="@+id/text_display_crop_sci_name"
              android:maxLines="1"
              android:ellipsize="end"
              style="@style/TextAppearance.AppCompat.Caption" />

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/text_display_crop_sci_name"
              android:id="@+id/text_diseases"
              style="@style/TextAppearance.AppCompat.Subhead" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>