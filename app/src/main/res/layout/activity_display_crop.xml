<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayCropActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_display_crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_display_crop"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Theme.Custom.Toolbar"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar_display_crop"
            app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:id="@+id/text_display_crop_name"
              android:maxLines="1"
              android:ellipsize="end"
              style="@style/TextAppearance.AppCompat.Headline" />

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/text_display_crop_name"
              android:id="@+id/text_display_crop_sci_name"
              android:maxLines="1"
              android:ellipsize="end"
              style="@style/TextAppearance.AppCompat.Caption" />

        <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_below="@+id/text_display_crop_sci_name"
              android:id="@+id/text_diseases"
              style="@style/TextAppearance.AppCompat.Subhead" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>