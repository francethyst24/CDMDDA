<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
>

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/apl_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:liftOnScroll="true"
            tools:viewBindingIgnore="true"
    >

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/CustomToolbar"
                app:title="@string/app_name"
                app:menu="@menu/menu_main"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/apl_main"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            tools:listitem="@layout/item_diagnosis"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal"
    />

    <TextView
            android:id="@+id/text_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/rcv_diagnosis"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:text="@string/text_main"
    />

    <TextView
            android:id="@+id/text_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_main_title"
            android:text="@string/text_guest"
            tools:viewBindingIgnore="true"
    />

    <LinearLayout
            android:id="@+id/container_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/text_user_id"
            android:orientation="horizontal"
    >

        <Button android:id="@+id/button_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:text="@string/button_camera"
        />

        <Button android:id="@+id/button_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:text="@string/button_gallery"
        />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_crops"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/container_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_crop"
            android:translationZ="2dp"
    />

    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_crops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/container_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:indicatorSize="80dp"
            app:trackThickness="6dp"
            android:indeterminate="true"
    />

    <TextView
            android:id="@+id/text_no_crops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/container_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:translationZ="2dp"
            style="@style/TextAppearance.AppCompat.Large"
            android:text="@string/text_no_crops"
            android:visibility="gone"
            tools:visibility="visible"
    />

    <ProgressBar
            android:id="@+id/loading_inference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/container_inference"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:translationZ="3dp"
    />

    <LinearLayout
            android:id="@+id/container_inference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:paddingTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:translationZ="3dp"
    >

        <TextView
                android:id="@+id/text_analyzing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextAppearance.AppCompat.Large"
                android:text="@string/text_analyzing"
        />

        <Button
                android:id="@+id/button_cancel_inference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/fui_cancel"
        />

    </LinearLayout>

    <View
            android:id="@+id/main_mask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/apl_main"
            app:layout_constraintBottom_toTopOf="@+id/loading_inference"
            android:background="#77000000"
            android:visibility="gone"
            android:translationZ="3dp"
            android:clickable="true"
            android:focusable="true"/>



</androidx.constraintlayout.widget.ConstraintLayout>