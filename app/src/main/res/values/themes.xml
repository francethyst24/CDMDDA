<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CDMDDA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ochre_200</item>
        <item name="colorSecondaryVariant">@color/ochre_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CDMDDA.DisplayCrop" parent="Theme.CDMDDA">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MaterialComponents.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
    </style>

    <style name="LayoutBackground">
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="LayoutForeground">
        <item name="android:background">@color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DisplayCropContent"><item name="android:background">@color/background_semi</item></style>

    <style name="DisplayCropCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.CDMDDA">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>
