<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_item_small"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
>

    <TextView
            android:id="@+id/text_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_root"
            android:layout_marginStart="@dimen/margin_root"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            tools:text="@tools:sample/lorem"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"
    />

    <ImageView
            android:id="@+id/icon_search_item_supported"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/margin_item_medium"
            android:baselineAlignBottom="true"
            android:layout_toEndOf="@id/text_search_name"
            android:layout_alignTop="@id/text_search_name"
            android:tint="?attr/colorSecondary"
            android:src="@drawable/ic_baseline_verified_24"
            android:visibility="gone"
            android:tooltipText="@string/ui_text_detectable"
            tools:visibility="visible"
            tools:targetApi="o"/>

</RelativeLayout>