<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/image_bullet"
            android:layout_width="@dimen/bullet_size"
            android:layout_height="@dimen/bullet_size"
            android:layout_marginTop="@dimen/margin_item_small"
            android:background="@drawable/ic_baseline_bullet_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_item_symptom"/>

    <TextView
            android:id="@+id/text_item_symptom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/image_bullet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:justificationMode="inter_word"
            tools:text="@tools:sample/lorem"
            style="@style/TextAppearance.AppCompat"/>

</androidx.constraintlayout.widget.ConstraintLayout>